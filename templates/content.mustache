{{!
    @template tiny_aic/content

    Display generated content  message

    Example context (json):
    {
        "content": "This is the generated content from AI service."
    }
}}


<div class="card">
  <h5 class="card-header">Generated Content</h5>
  <div class="card-body">
    <div class="card-text"  id="aiccontent">{{{content}}}</div>
     <button class="tox-button tox-button--primary" type="button" id="inserttext_tiny_aic">
                    {{#str}}add_to_editor,tiny_aic {{/str}}
                </button>
  </div>
</div>